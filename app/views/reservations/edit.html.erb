<h1>Edit Reservation</h1>
<%= form_with scope: :reservation, url: reservation_path, method: :put, local: true do |form| %>

  <%= form.hidden_field :customer_id, value: current_user %>

  <% if is_admin? %>
    <p>
      <%= form.label :car_id %>:
      <%= form.text_field :car_id %>
    </p>
  <% end %>


  <p>
    <%= form.label :from_time %>:
    <%= datetime_field(:reservation, :from_time) %>
  </p>


  <p>
    <%= form.label :to_time %>:
    <%= datetime_field(:reservation, :to_time) %>
  </p>

  <p>
    <%= form.submit "Save", :class => "btn btn-success"%>
  </p>
<% end %>
