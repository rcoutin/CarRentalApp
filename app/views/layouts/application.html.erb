<!DOCTYPE html>
<html>
  <head>
    <title>CarRentalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>


<br>

  <body>
    <% if logged_in %>
      <div class="container navbar">
        <div class="pull-left">
          <%= link_to 'OnePlus Car Rentals', root_path,:class=>"navbar-header"%>
        </div>
        <div class="pull-right">
          <%= get_user_name %> &nbsp; &nbsp;
          <%= link_to 'Sign Out', application_sign_out_path , :class => "btn btn-danger"%>
        </div>
      </div>
    <% end %>
  	<div class="container">
      
      <%= flash_messages %>

      <%= yield %>
      
    </div>
  </body>
</html>
