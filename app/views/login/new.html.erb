<div class="login-page-new">
  <h1>Login</h1>
  <%= form_with scope: :login, url: login_index_path, local: true do |form| %>
    <p>
      <%= form.label :email %>
      <%= email_field(:login, :email) %>
    </p>

    <p>
      <%= form.label :password %>
      <%= password_field(:login, :password) %>
    </p>

    <p>
      <%= form.submit "Log In", :class => "btn btn-primary"%>
    </p>
    <p>New user? <%= link_to "Sign up now!", new_customer_path , :class => "btn btn-success"%></p>
    <p>Admin? <%= link_to "Login as Admin", new_admins_login_path , :class => "btn btn-info"%></p>
  <% end %>
</div>
